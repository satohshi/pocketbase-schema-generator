{
	"name": "pocketbase-ts-schema-generator",
	"version": "0.1.0",
	"description": "JS hooks for PocketBase to help you with schema generation for pocketbase-ts package during development",
	"author": "satohshi",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "tsc -w --outDir ./pb/pb_hooks/",
		"build": "tsc --outDir ./pb_hooks/",
		"lint": "tsc --noEmit && prettier --check .",
		"format": "prettier --write .",
		"test": "vitest"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.12",
		"@types/node": "^22.13.1",
		"prettier": "^3.5.0",
		"typescript": "^5.7.3",
		"vitest": "^3.0.5"
	}
}
